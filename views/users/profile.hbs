<div class="card mb-3" style="max-width: 1080px;">
  <div class="row g-0">
    <div class="col-md-4">
      <img src="{{user.image}}" class="img-fluid rounded-start" alt="user-image">
    </div>
    <div class="col-md-8">
      <div class="card-body">
        <h4 class="card-title fw-bold mb-3">{{user.name}}</h4>
        <h6 class="card-title mb-3">{{user.email}}</h6>
        <h6 class="card-title mb-3"><b>{{commentCounts}}</b> 已評論餐廳</h6>
        <h6 class="card-title mb-3"><b>{{user.favoriteCounts}}</b> 收藏的餐廳</h6>
        <h6 class="card-title mb-3"><b>{{user.followingCounts}}</b> followings (追蹤者)</h6>
        <h6 class="card-title mb-3"><b>{{user.followerCounts}}</b> followers (追隨者)</h6>
        {{#ifCond loginUser.id user.id}}
        <a href="/users/{{user.id}}/edit"><button type="button" class="btn btn-primary">edit</button></a>
        {{/ifCond}}
      </div>
    </div>
  </div>
</div>

<div class="row g-0" style="max-width: 1080px;">
  <!--left region-->
  <div class="col-4 me-4">
    <!--followings-->
    <div class="card mb-3">
      <div class="card-header">
        <b>{{user.followingCounts}}</b> followings (追蹤者)
      </div>
      <div class="card-body d-flex flex-row flex-wrap">
        {{#each user.Followings}}
        <div class="me-3 mb-3">
          <a href="/users/{{this.id}}">
            <img src="{{this.image}}" width="50px" height="50px" style="transition: opacity 0.5s; opacity:0;"
              onload="this.style.opacity=1;">
          </a>
        </div>
        {{/each}}
      </div>
    </div>
    <!--followers-->
    <div class="card mb-3">
      <div class="card-header">
        <b>{{user.followerCounts}}</b> followers (追隨者)
      </div>
      <div class="card-body d-flex flex-row flex-wrap">
        {{#each user.Followers}}
        <div class="me-3 mb-3">
          <a href="/users/{{this.id}}">
            <img src="{{this.image}}" width="50px" height="50px" style="transition: opacity 0.5s; opacity:0;"
              onload="this.style.opacity=1;">
          </a>
        </div>
        {{/each}}
      </div>
    </div>
  </div>
  <!--right region-->
  <div class="col">
    <!--已評論餐廳-->
    <div class="card mb-3">
      <div class="card-header">
        <b>{{commentCounts}}</b> 已評論餐廳
      </div>
      <div class="card-body d-flex flex-row flex-wrap">
        {{#each comments}}
        <div class="me-3 mb-3">
          <a href="/restaurants/{{this.Restaurant.id}}">
            <img src="{{this.Restaurant.image}}" width="50px" height="50px" style="transition: opacity 0.5s; opacity:0;"
              onload="this.style.opacity=1;">
          </a>
        </div>
        {{/each}}
      </div>
    </div>
    <!--收藏的餐廳-->
    <div class="card mb-3">
      <div class="card-header">
        <b>{{user.favoriteCounts}}</b> 收藏的餐廳
      </div>
      <div class="card-body d-flex flex-row flex-wrap">
        {{#each user.FavoritedRestaurants}}
        <div class="me-3 mb-3">
          <a href="/restaurants/{{this.id}}">
            <img src="{{this.image}}" width="50px" height="50px" style="transition: opacity 0.5s; opacity:0;"
              onload="this.style.opacity=1;">
          </a>
        </div>
        {{/each}}
      </div>
    </div>
  </div>
</div>